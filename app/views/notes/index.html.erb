<% @notes.each do |note| %>
  <tr>
    <td><%= note.name %></td>
    <td><%= note.title %></td>
    <td><%= note.description %></td>
    <td><%= link_to 'Show', category_note_url(@category, note) %></td>
    <td><%= link_to 'Edit', edit_category_note_path(@category,note) %></td>
    <td><%= link_to 'Destroy', category_note_path(@category,note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

